<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Advertisement">

    <ImageView
        android:id="@+id/Addpiker_imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"

        android:src="@drawable/ic_baseline_add_photo_alternate_24"/>
<EditText
    android:id="@+id/add_coment_adv"
    android:layout_width="match_parent"
    android:layout_below="@id/Addpiker_imageView"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:hint="enter comment"
    android:padding="8dp"
    android:inputType="textMultiLine"
    android:textSize="16sp"
    android:background="@color/grey_10"
    android:layout_marginEnd="20dp"/>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Submit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/add_coment_adv"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_design"
        />
    <TextView
        android:id="@+id/prev_ads_title"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/button"
        android:layout_marginTop="25dp"
        android:text="Previos Ads :-"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/prev_ads_title"/>


</RelativeLayout>